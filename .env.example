# Bot Core Environment Variables
# Copy this file to .env and fill in your actual values

# Service Configuration
NODE_ENV=production
LOG_LEVEL=info

# Database - MongoDB Configuration
# Development (Docker): Use container connection
DATABASE_URL=mongodb://admin:password@mongodb:27017/bot_core?authSource=admin&replicaSet=rs0
# Production: Use MongoDB Atlas or external MongoDB cluster
# DATABASE_URL=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/bot_core?retryWrites=true&w=majority

# Redis Configuration
REDIS_PASSWORD=your-secure-password

# API Keys - NEVER commit real keys
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
OPENAI_API_KEY=your-openai-api-key

# Security Tokens
INTER_SERVICE_TOKEN=generate-a-secure-random-token
RUST_API_KEY=generate-a-secure-random-token
PYTHON_API_KEY=generate-a-secure-random-token
JWT_SECRET=generate-a-secure-jwt-secret
DASHBOARD_SESSION_SECRET=generate-a-secure-session-secret

# Trading Configuration
BINANCE_TESTNET=true
TRADING_ENABLED=false

# Resource Limits (Memory)
PYTHON_MEMORY_LIMIT=2G
PYTHON_CPU_LIMIT=2
RUST_MEMORY_LIMIT=2G
RUST_CPU_LIMIT=2
FRONTEND_MEMORY_LIMIT=1G
FRONTEND_CPU_LIMIT=1

# Monitoring
GRAFANA_PASSWORD=admin

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# External Services
SENTRY_DSN=your-sentry-dsn-for-error-tracking
DATADOG_API_KEY=your-datadog-api-key

# Message Queue
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your-secure-password

# Kong API Gateway
KONG_DB_PASSWORD=your-secure-password

# MongoDB Settings (Docker Container Configuration)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=secure_mongo_password_change_me

# MongoDB Resource Limits (Docker)
MONGO_MEMORY_LIMIT=2G
MONGO_CPU_LIMIT=2
MONGO_MEMORY_RESERVE=512M
MONGO_CPU_RESERVE=0.5

# MongoDB Express (Web Admin Interface - Optional)
# Access at http://localhost:8081 when enabled with --profile mongo-admin
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin

# API Keys for Services  
MONITORING_API_KEY=your-monitoring-api-key
DASHBOARD_API_KEY=your-dashboard-api-key

# JWT Keys (for Kong)
JWT_PUBLIC_KEY=your-jwt-public-key
JWT_PRIVATE_KEY=your-jwt-private-key

# Docker Registry Configuration
# Default: GitHub Container Registry (ghcr.io)
# Alternatives: Docker Hub (docker.io), AWS ECR, Google GCR, Azure ACR
DOCKER_REGISTRY=ghcr.io/your-username/bot-core
DOCKER_USERNAME=your-github-username
DOCKER_PASSWORD=your-github-token-or-docker-password

# Image Version Control
# Options: latest, git SHA, semver (e.g., v1.0.0)
VERSION=latest
GIT_SHA=auto-detect

# Image Pull Policy
# Options: Always, IfNotPresent, Never
IMAGE_PULL_POLICY=Always