# Development Dockerfile for React UI Dashboard with hot reload using Bun
FROM oven/bun:1 as base

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json ./
COPY bun.lockb* ./

# Install dependencies with bun (all optional dependencies for development)
RUN bun install --frozen-lockfile

# Add missing rollup dependencies for ARM64
RUN bun add -D @rollup/rollup-linux-arm64-gnu @rollup/rollup-linux-arm64-musl || true

# Development stage
FROM oven/bun:1 as development

# Install curl for health check
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Create app user
RUN groupadd -g 1001 appuser && \
    useradd -r -u 1001 -g appuser appuser

# Set working directory
WORKDIR /app

# Copy node_modules from base stage
COPY --from=base /app/node_modules ./node_modules
COPY --from=base /app/package.json ./

# Copy source code (this will be overridden by volume mount)
COPY . .

# Set ownership
RUN chown -R appuser:appuser /app

# Switch to app user
USER appuser

# Set environment variables for development
ENV NODE_ENV=development
ENV VITE_RUST_API_URL=http://localhost:8080
ENV VITE_WS_URL=ws://localhost:8080/ws
ENV CHOKIDAR_USEPOLLING=true
ENV WATCHPACK_POLLING=true

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:3000/ || exit 1

# Development command with hot reload
CMD ["bun", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"] 