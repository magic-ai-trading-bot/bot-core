{
  "logging": {
    "level": "info"
  },
  "browser": {
    "enabled": false
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "openai/gpt-4.1"
      },
      "workspace": "/home/node/.openclaw/workspace"
    }
  },
  "tools": {
    "allow": ["exec", "read", "write"]
  },
  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "${TELEGRAM_BOT_TOKEN}",
      "dmPolicy": "allowlist",
      "allowFrom": ["${TELEGRAM_USER_ID}"],
      "streamMode": "partial",
      "textChunkLimit": 4000
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "lan",
    "controlUi": {
      "allowInsecureAuth": true
    },
    "auth": {
      "mode": "token",
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    },
    "trustedProxies": ["192.168.65.0/24", "172.16.0.0/12", "127.0.0.0/8"]
  },
  "skills": {
    "load": {
      "extraDirs": [],
      "watch": false
    },
    "entries": {
      "botcore": {
        "enabled": true,
        "env": {
          "MCP_URL": "${MCP_URL}",
          "MCP_AUTH_TOKEN": "${MCP_AUTH_TOKEN}"
        }
      }
    }
  },
  "plugins": {
    "entries": {
      "telegram": {
        "enabled": true
      }
    }
  }
}
