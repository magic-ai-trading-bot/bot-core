#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Skip husky hooks in CI environment
if [ "$CI" = "true" ]; then
  exit 0
fi

# Check if rust files were modified
RUST_CHANGED=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.rs$' || true)

if [ -n "$RUST_CHANGED" ]; then
  echo "üîç Rust files changed ‚Äî running pre-commit checks..."

  # Run cargo fmt check
  echo "  ‚Üí cargo fmt --check"
  (cd rust-core-engine && cargo fmt --check 2>&1)
  FMT_EXIT=$?
  if [ $FMT_EXIT -ne 0 ]; then
    echo ""
    echo "‚ùå cargo fmt failed! Run: cd rust-core-engine && cargo fmt"
    exit 1
  fi
  echo "  ‚úÖ formatting OK"

  # Run cargo clippy (matches CI: -D warnings -A too_many_arguments)
  echo "  ‚Üí cargo clippy -- -D warnings -A clippy::too_many_arguments"
  (cd rust-core-engine && cargo clippy -- -D warnings -A clippy::too_many_arguments -A clippy::uninlined_format_args 2>&1)
  CLIPPY_EXIT=$?
  if [ $CLIPPY_EXIT -ne 0 ]; then
    echo ""
    echo "‚ùå cargo clippy failed! Fix lint warnings before committing."
    exit 1
  fi
  echo "  ‚úÖ clippy OK"

  echo "‚úÖ All Rust pre-commit checks passed"
fi
