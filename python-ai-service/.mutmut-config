[run]
# Paths to mutate
paths_to_mutate = services/,models/,utils/

# Paths to exclude from mutation
paths_to_exclude = tests/,__pycache__/,venv/,.venv/,build/,dist/

# Test command to run
test_command = pytest tests/ -x --tb=short

# Number of parallel workers
workers = 4

# Only show diffs for survived mutations
show_only_diffs = True

# Cache directory
cache_dir = .mutmut-cache

# Mutation operators
# Available: all, string, number, operator, keyword, comparison
mutation_types = all

# Timeout multiplier (test timeout = baseline * multiplier)
timeout_multiplier = 2.0

# Minimum test score required
minimum_test_score = 75.0

# Output format
output_format = text
