# Python AI Service Environment Variables
# Copy this file to .env and update with your actual values

# OpenAI API Configuration
# Primary API key for OpenAI GPT-4
OPENAI_API_KEY=your-openai-api-key-here

# Backup API keys (comma-separated) for fallback on rate limits
OPENAI_BACKUP_API_KEYS=your-backup-key-1,your-backup-key-2

# MongoDB Configuration
# Database connection URL with authentication
DATABASE_URL=mongodb://botuser:defaultpassword@mongodb:27017/trading_bot?authSource=admin

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Service Configuration
SERVICE_PORT=8000
SERVICE_HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting Configuration
# OpenAI rate limit delay in seconds
OPENAI_REQUEST_DELAY=20

# Analysis Configuration
# Interval for periodic AI analysis in minutes
ANALYSIS_INTERVAL_MINUTES=5

# Security Note:
# NEVER commit the actual .env file to version control
# Keep your API keys secure and rotate them regularly
