# Python AI Service Environment Variables
# Copy this file to .env and update with your actual values

# OpenAI API Configuration
# Primary API key for OpenAI GPT-4
OPENAI_API_KEY=your-openai-api-key-here

# Backup API keys (comma-separated) for fallback on rate limits
OPENAI_BACKUP_API_KEYS=your-backup-key-1,your-backup-key-2

# MongoDB Configuration
# Database connection URL with authentication
# REQUIRED: Replace with your actual MongoDB credentials
DATABASE_URL=mongodb://botuser:YOUR_PASSWORD@mongodb:27017/trading_bot?authSource=admin

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Service Configuration
SERVICE_PORT=8000
SERVICE_HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting Configuration
# OpenAI rate limit delay in seconds (between consecutive OpenAI API calls)
# GPT-4o-mini has high limits: 500 RPM (Tier 1), 5000 RPM (Tier 2+)
# Set to 2 for normal use, increase if you hit 429 errors
OPENAI_REQUEST_DELAY=2

# API Rate Limits (requests per minute)
# Main AI endpoints - high throughput for multi-symbol monitoring
RATE_LIMIT_AI_ANALYZE=600
RATE_LIMIT_PREDICT_TREND=600
# Secondary AI endpoints
RATE_LIMIT_STRATEGY_RECOMMENDATIONS=300
RATE_LIMIT_MARKET_CONDITION=300
# Utility endpoints
RATE_LIMIT_AI_INFO=120
RATE_LIMIT_AI_STRATEGIES=120
RATE_LIMIT_AI_PERFORMANCE=120
RATE_LIMIT_AI_FEEDBACK=120
# Admin/Debug endpoints
RATE_LIMIT_DEBUG=60
RATE_LIMIT_COST_STATS=60
RATE_LIMIT_STORAGE_STATS=60
RATE_LIMIT_STORAGE_CLEAR=10

# Analysis Configuration
# Interval for periodic AI analysis in minutes
ANALYSIS_INTERVAL_MINUTES=5

# RabbitMQ Configuration (for Celery)
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq_default_password
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_VHOST=bot-core

# Notification System Configuration
NOTIFICATIONS_ENABLED=false
NOTIFICATION_CHANNELS=email,slack,discord,telegram

# Email Notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=admin@example.com,alerts@example.com

# Slack Webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Service URLs (for monitoring tasks)
RUST_API_URL=http://localhost:8080
PYTHON_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Security Note:
# NEVER commit the actual .env file to version control
# Keep your API keys secure and rotate them regularly
