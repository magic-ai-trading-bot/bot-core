# =============================================================================
# CRYPTO TRADING BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and uncomment the desired configuration

# ----------------------------------------------------------------------------
# MODE SELECTION (uncomment one)
# ----------------------------------------------------------------------------
# For Production (default):
DOCKERFILE=Dockerfile
LOG_LEVEL=INFO
RUST_LOG=info
NODE_ENV=production
NODE_MEMORY=1024

# For Development (uncomment to enable):
# DOCKERFILE=Dockerfile.dev
# LOG_LEVEL=DEBUG
# RUST_LOG=debug
# NODE_ENV=development
# NODE_MEMORY=768

# ----------------------------------------------------------------------------
# RESOURCE LIMITS
# ----------------------------------------------------------------------------
# Python AI Service
PYTHON_MEMORY_LIMIT=2G
PYTHON_CPU_LIMIT=2
PYTHON_MEMORY_RESERVE=1G
PYTHON_CPU_RESERVE=1

# Rust Core Engine
RUST_MEMORY_LIMIT=2G
RUST_CPU_LIMIT=2
RUST_MEMORY_RESERVE=1G
RUST_CPU_RESERVE=1

# Frontend
FRONTEND_MEMORY_LIMIT=1G
FRONTEND_CPU_LIMIT=1
FRONTEND_MEMORY_RESERVE=256M
FRONTEND_CPU_RESERVE=0.5

# ----------------------------------------------------------------------------
# MEMORY OPTIMIZED PRESET (uncomment to enable)
# ----------------------------------------------------------------------------
# PYTHON_MEMORY_LIMIT=1.5G
# PYTHON_CPU_LIMIT=1.5
# RUST_MEMORY_LIMIT=1G
# RUST_CPU_LIMIT=1
# FRONTEND_MEMORY_LIMIT=512M
# FRONTEND_CPU_LIMIT=0.5
# NODE_MEMORY=512

# ----------------------------------------------------------------------------
# API KEYS & SECRETS
# ----------------------------------------------------------------------------
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here
BINANCE_TESTNET=true
TRADING_ENABLED=false

# Security tokens
INTER_SERVICE_TOKEN=default_token
PYTHON_API_KEY=python_api_key
RUST_API_KEY=rust_api_key
DASHBOARD_SESSION_SECRET=dashboard_secret 